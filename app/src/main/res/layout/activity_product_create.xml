<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductCreateActivity">

    <TextView
        android:id="@+id/createproduct_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Product"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/messagetag_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="35dp" />

    <EditText
        android:id="@+id/messagetag_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Message"
        android:inputType="text"
        android:minHeight="48dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/pathbuilder_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Path Builder"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="110dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_recycler"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginBottom="388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/add_path_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/remove_path_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="296dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_recycler"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginStart="248dp"
        app:layout_constraintStart_toStartOf="@id/select_recycler"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Product"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="366dp" />

</androidx.constraintlayout.widget.ConstraintLayout>